root (cd)

title Boot Linux system! (32-bit kernel) (wait 30 seconds)
root (cd)
kernel /boot/kernel32 root=/dev/ram0 rw vga=normal
initrd /boot/rootfs.cgz

title Boot Linux system! (skip keymap prompt)
root (cd)
kernel /boot/kernel32 nokeymap root=/dev/ram0 rw vga=normal
initrd /boot/rootfs.cgz

title Boot Linux system to X! (32-bit kernel) (wait 30 seconds)
root (cd)
